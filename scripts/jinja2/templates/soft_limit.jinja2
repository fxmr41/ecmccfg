{%- if (softlimits is defined) and (softlimits.enable is defined) and (softlimits.enable == true) %}
    #- =============================================================================
    #- Soft limits
    #- =============================================================================
    {%- if softlimits.forwardEnable is defined %}
        ecmcConfigOrDie "Cfg.SetAxisEnableSoftLimitFwd({{ axis.id }},{{ softlimits.forwardEnable|int }})"
        ecmcConfigOrDie "Cfg.SetAxisSoftLimitPosFwd({{ axis.id}},{{ softlimits.forward}})"
    {%- endif %}
    {%- if softlimits.backwardEnable is defined %}
        ecmcConfigOrDie "Cfg.SetAxisEnableSoftLimitBwd({{ axis.id }},{{ softlimits.backwardEnable|int }})"
        ecmcConfigOrDie "Cfg.SetAxisSoftLimitPosBwd({{ axis.id }},{{ softlimits.backward}})"
    {%- endif %}
{%- endif %}
