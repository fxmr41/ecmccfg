# Special configuration when infodata 2 is configured to display digital inputs and STO:
#     -Bit0: Digital Input 1 Level
#     -Bit1: Digital Input 2 Level
#     -Bit8: STO Input Level (STO variant, only)

file "ecmcEL72XX_DRV_CSP.template"
{
  pattern {CH_ID}
          {01   }
}

file "ecmcEL72XX_ENC.template"
{
  pattern {CH_ID}
          {01   }
}

file "ecmc_analogInput-chX.template"
{
  pattern {CH_ID, sourceName,       KEY,    suffix,     DESC,              EGU,       ESLO,       PREC, LOPR, HOPR, LOLO, LOW,  HIGH, HIHI, HYST, LLSV,          LSV,           HSV,           HHSV}
          {01,    "velocityActual", "Drv",  "-VelAct",  "Actual Vel",      "rpm",     0.000225    3,    0,    0,    0,    0,    0,    0,    0,    "NO_ALARM",    "NO_ALARM",    "NO_ALARM",    "NO_ALARM"  }
          {01,    "torqueActual",   "Drv",  "-TrqAct",  "Actual Trq",      "%",       0.1,        1,    -100, 100,  0,    -80,  80,   0,    0,    "NO_ALARM",    "NO_ALARM",    "MINOR",       "NO_ALARM"  }
          {01,    "voltageActual",  "Drv",  "-VolAct",  "Actual Voltage",  "V",       0.001,      3,    0,    60,   8,    20,   49,   50,   0.25, "MAJOR",       "MINOR",       "MINOR",       "MAJOR"  }
          {01,    "followingError", "Drv",  "-PosDiff", "Following Error", "Cnts",    1,          0,    0,    0,    0,     0,   0,    0,    0,    "NO_ALARM",    "NO_ALARM",    "NO_ALARM",    "NO_ALARM"  }
}

# Map infodata2 to binary inputs (digital input 1,2 and STO):
file "ecmcEL7221-9014_STD_INPUTS.template"
{
  pattern {CH_ID}
          {01   }
}

file "ecmcEL72XX_TP.template"
{
  pattern {CH_ID}
          {01   }
}

file "ecmc_analogOutput-chX.template"
{
  pattern {CH_ID, sourceName,       KEY,    suffix,     DESC,            EGU,    ESLO,       PREC, LOPR, HOPR, LOLO, LOW,  HIGH, HIHI, HYST, LLSV,       LSV,        HSV,        HHSV}
          {01,    "torqueOffset",   "Drv",  "-TrqOff",  "Torque Offset", "%",    0.1,        1,    -200, 200,  0,    0,    0,    0,    0,    "NO_ALARM", "NO_ALARM", "NO_ALARM", "NO_ALARM"  }
}
